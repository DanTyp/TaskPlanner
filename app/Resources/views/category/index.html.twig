{% extends 'base.html.twig' %}

{% block body %}
    <div class="col-md-4 col-md-offset-4" style="margin-top: 65px; margin-bottom: auto">
        <h1>Categories list</h1>

        <table class="table">
            <thead>
                <tr>
                    {#<th>Id</th>#}
                    <th>Name</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for category in categories %}
                    <tr>
                        {#<td><a href="{{ path('category_show', { 'id': category.id }) }}">{{ category.id }}</a></td>#}
                        <td>{{ category.name }}</td>
                        <td>

                            {#<li>
                                <a href="{{ path('category_show', { 'id': category.id }) }}">show</a>
                            </li>#}

                            <a href="{{ path('category_edit', { 'id': category.id }) }}" class="btn btn-large btn-warning">edit</a>

                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('category_new') }}" class="btn btn-large btn-warning">Create a new category</a>
        <a href="{{ path('task_index') }}" class="btn btn-large btn-primary">Go back to the tasks list</a>

    </div>
{% endblock %}
