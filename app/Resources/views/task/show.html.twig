{% extends 'base.html.twig' %}

{# {% form_theme form 'bootstrap_3_layout.html.twig' %} #}

{% block body %}
    <div class="col-md-4 col-md-offset-4">
        <h1>Task</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>Id</th>
                    <td>{{ task.id }}</td>
                </tr>
                <tr>
                    <th>Name</th>
                    <td>{{ task.name }}</td>
                </tr>
                <tr>
                    <th>Description</th>
                    <td>{{ task.description }}</td>
                </tr>
                <tr>
                    <th>Date</th>
                    <td>{% if task.date %}{{ task.date|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Deadline</th>
                    <td>{% if task.deadline %}{{ task.deadline|date('Y-m-d H:i:s') }}{% endif %}</td>
                </tr>
                <tr>
                    <th>Priority</th>
                    <td>{{ task.priority }}</td>
                </tr>
                <tr>
                    <th>Attach</th>
                    <td>{{ task.attach }}</td>
                </tr>
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('task_index') }}">Back to the list</a>
            </li>
            <li>
                <a href="{{ path('task_edit', { 'id': task.id }) }}">Edit</a>
            </li>
            <li>
                <a href="{{ path('taskplanner_task_marktaskascompleted', { 'id': task.id }) }}">Mark as completed</a>
            </li>
            <li>
                {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
                {{ form_end(delete_form) }}
            </li>
        </ul>
    </div>
{% endblock %}
